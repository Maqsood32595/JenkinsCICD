pipeline {
  agent any  // Use a generic agent for the entire pipeline

  stages {
    stage('Checkout') {
      steps {
        // Checkout code from your Git repository
        git branch: 'test', url: 'https://github.com/Maqsood32595/Jenkins-Zero-To-Hero.git'
      }
    }
    // Add more stages here as needed
  }
  
  // Optional post actions (if needed)
  post {
    always {
      echo 'Pipeline completed.'
    }
    success {
      echo 'Pipeline completed successfully.'
    }
    failure {
      echo 'Pipeline failed.'
    }
  }
}
